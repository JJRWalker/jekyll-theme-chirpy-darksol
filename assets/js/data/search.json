---
layout: compress
swcache: true
---

[
  {% for post in site.posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "categories": {{ post.categories | join: ', ' | jsonify }},
    "tags": {{ post.tags | join: ', ' | jsonify }},
    "date": {{ post.date | date: '%b %d, %Y' | jsonify}},
    "content": {% include post-description.html json=true %}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %},

  {% for page in site.pages %}
   {
     {% if page.title != nil and page.searchable %}
     {% assign post = page %}
        "title"    : {{ page.title | jsonify }},
        "url"      : {{ page.url | relative_url | jsonify }},
        "category" : {{ page.categories | join: ', ' | jsonify }},
        "tags"     : {{ page.tags | join: ', ' | jsonify }},
        "date"     : {{ page.date | date: '%b %d, %Y' | jsonify}},
        "content"  : {% include post-description.html json=true %}
     {% endif %}
   } {% unless forloop.last %},{% endunless %}
  {% endfor %},
  
  {% for page in site.tabs %}
   {
     {% if page.title != nil and page.searchable %}
     {% assign post = page %}
        "title"    : {{ page.title | jsonify }},
        "url"      : {{ page.url | relative_url | jsonify }},
        "category" : {{ page.categories | join: ', ' | jsonify }},
        "tags"     : {{ page.tags | join: ', ' | jsonify }},
        "date"     : {{ page.date | date: '%b %d, %Y' | jsonify}},
        "content"  : {% include post-description.html json=true %}
     {% endif %}
   } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
